<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.lhd.mynews.view.NoScrollViewPager
        android:id="@+id/vp_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/rg_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_home_selector"
            android:text="首页"

            />

        <RadioButton
            android:id="@+id/rb_newscenter"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_newscenter_selector"
            android:text="新闻"

            />

        <RadioButton
            android:id="@+id/rb_smartservice"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_smartservice_selector"
            android:text="服务"

            />

        <RadioButton
            android:id="@+id/rb_govaffair"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_govaffair_selector"
            android:text="政要"

            />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_setting_selector"
            android:text="设置"

            />


    </RadioGroup>

</LinearLayout>